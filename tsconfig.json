{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "ios": ["./src/IOS"],
      "ios/*": [
        "./src/IOS/*", 
        "./src/IOS-components/*",
        "./src/IOS-components/Actions/*",
        "./src/IOS-components/Content/*",
        "./src/IOS-components/Experiences/*",
        "./src/IOS-components/Input/*",
        "./src/IOS-components/Layouts/*",
        "./src/IOS-components/Menus/*",
        "./src/IOS-components/Navigation/*",
        "./src/IOS-components/Presentation/*",
        "./src/IOS-components/Search/*",
        "./src/IOS-components/Status/*",
      ],
      "module": ["./src/modules"],
      "module/*": ["./src/modules/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src", 
    "src/vite-env.d.ts",
    "src/Page/styled.d.ts",
    "src/main.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
